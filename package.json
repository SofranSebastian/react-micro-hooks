{
    "name": "@sofransebastian/react-micro-hooks",
    "version": "1.7.0",
    "description": "Collection of single-responsibility React hooks for common use cases",
    "homepage": "https://github.com/SofranSebastian/react-micro-hooks#readme",
    "bugs": {
        "url": "https://github.com/SofranSebastian/react-micro-hooks/issues"
    },
    "repository": {
